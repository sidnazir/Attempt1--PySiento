#:import utils kivy.utils

# The UI for the widgets
<ConfigurationWidgets>:
    # Hint text for selecting a port to connect to
    Label:
        id: portHintLabel
        text: "Select a port to connect to"
        size: 350, 50
        pos: 250, 400

    # Button to connect to the Arduino
    Button:
        id: connectButton
        text: "Connect"
        size: 100,50
        pos: 500,350
        on_press: root.connect_to_arduino()

    # Hint text for selecting a file to flash
    Label:
        id: portHintLabel
        text: "Select a file to flash the device"
        size: 350, 50
        pos: 250, 300

    # Button to flash the Arduino
    Button:
        id: flashButton
        text: "Flash"
        size: 100,50
        pos: 500,250
        on_press: root.flash_arduino()

    # Button to start reading data
    Button:
        id: startButton
        text: "Start"
        size: 100,50
        pos: 350,150
        on_press: root.show_data()

# The LoadDialog UI
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: fileChooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(fileChooser.path, fileChooser.selection)